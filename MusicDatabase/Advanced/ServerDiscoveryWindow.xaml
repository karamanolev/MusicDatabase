<local:MusicDatabaseWindow x:Class="MusicDatabase.Advanced.ServerDiscoveryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:MusicDatabase"
        Title="Server Discovery" Height="300" Width="300"
        WindowStartupLocation="CenterOwner" Closed="Window_Closed">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <GroupBox Margin="6" Header="Available Servers">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <TextBlock Margin="0,2,2,2" Name="textStatus">Searching...</TextBlock>
                <ListView Grid.Row="1" Name="listViewServers" />
            </Grid>
        </GroupBox>
    </Grid>
</local:MusicDatabaseWindow>
